doctype html
html(lang='en')
  head
    title Preferences | Willow
    include /global/head.pug
  body
    include /global/header.pug
    +toolbar()
    .container.center
      h2 Preferences
      form#preferences-form.large-form
        .field
          .left
            label(for='field-theme') Theme
          select#field-theme(v-model='theme')
            option(value='system') Use system default
            option(value='light') Light
            option(value='dark') Dark
    include /global/footer.pug
    script(src=`${env.BASE_URL}/js/preferences.js` type='text/javascript')
