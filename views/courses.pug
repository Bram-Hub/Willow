doctype html
html(lang='en')
  head
    title My Courses | Willow
    include /global/head.pug
    link(href='/css/index.css' rel='stylesheet' type='text/css')
    link(href='/css/colors.css' rel='stylesheet' type='text/css')
    link(href='/css/themes/dark.css' rel='stylesheet' type='text/css')
  body
    include /global/header.pug
    +toolbar()
    .container.center
      h1 Courses
        if Object.keys(instructorCourses).length > 0
          h2 As Instructor:
          for course in instructorCourses
            div
              h3= course.display_name
        if Object.keys(studentCourses).length > 0
          h2 As Student:
          for course in studentCourses
            div
              h3= course.display_name
    include /global/footer.pug
