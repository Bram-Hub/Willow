{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2020"
    ],
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  }
}
